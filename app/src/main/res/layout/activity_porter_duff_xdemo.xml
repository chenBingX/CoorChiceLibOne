<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_porter_duff_xdemo"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:overScrollMode="never"
  tools:context="com.chenbing.coorchicelibone.Views.PorterDuffXDemoActivity"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:id="@+id/title_bitmap"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:background="@color/white"
      android:gravity="center"
      android:text="Bitmap绘制"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:layout_marginTop="10dp"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/tv_bitmap"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_below="@+id/title_bitmap"
      app:stv_solid="#76b2a6"
      />

    <TextView
      android:id="@+id/title_native"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_bitmap"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:background="@color/white"
      android:gravity="center"
      android:text="Canvas直接绘制"
      android:textColor="@color/black"
      android:textSize="18sp"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/tv_native"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_below="@+id/title_native"
      app:stv_solid="#76b2a6"
      />

  </RelativeLayout>
</ScrollView>

