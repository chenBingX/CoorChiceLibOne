<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opacity_7_yellow"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chenbing.coorchicelibone.Views.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:text="文案文案文案文案文案文案案文案文案文案文案文"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />

    <com.chenbing.coorchicelibone.CustemViews.Titanic.TitanicTextView
        android:id="@+id/titanic_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Hello World!"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_button3"
            android:textAllCaps="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_blur"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/titanic_options"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <com.chenbing.coorchicelibone.ArrowView.ArrowView
        android:id="@+id/av"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:padding="0dp"
        app:av_angle="90"
        app:av_arrowColor="@color/red"
        app:av_arrowWidth="3dp"
        app:av_triangle="true" />

    <com.chenbing.coorchicelibone.ArrowView.ArrowView
        android:id="@+id/av_2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:padding="0dp"
        app:av_angle="180"
        app:av_arrowColor="@color/red"
        app:av_arrowWidth="3dp"
        app:av_rate="2" />


</RelativeLayout>
