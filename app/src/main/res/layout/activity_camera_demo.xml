<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_camera_demo"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.chenbing.coorchicelibone.Views.CameraDemoActivity">

  <SurfaceView
    android:id="@+id/surface_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    />

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
      android:id="@+id/btn_change_lens"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="旋转镜头"
      />
  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    <Button
      android:id="@+id/btn_Pic"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:text="Pic"
      android:textAllCaps="false"
      />

    <Button
      android:id="@+id/btn_video"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:text="Video Start"
      android:textAllCaps="false"
      />

  </LinearLayout>

  <com.chenbing.coorchicelibone.CustemViews.RoundCornerTextView
    android:id="@+id/focus_square"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:visibility="gone"
    tools:visibility="visible"
    app:solid="@color/transparent"
    app:stroke_width="1dp"
    app:stroke_color="@color/red"
    />

</RelativeLayout>
